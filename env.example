# CypherBank Environment Variables
# Copy this file to .env and update the values

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=cypherbank
DB_PASSWORD=cypherbank123

# Database Names for each service
DB_NAME_USER_SERVICE=user-service
DB_NAME_ACCOUNT_SERVICE=account-service
DB_NAME_TRANSACTION_SERVICE=transaction-service

# Service Discovery
EUREKA_SERVER_URL=http://localhost:8761/eureka/

# Application Ports (optional - defaults are used if not set)
EUREKA_PORT=8761
GATEWAY_PORT=8080
USER_SERVICE_PORT=8081
ACCOUNT_SERVICE_PORT=8082
TRANSACTION_SERVICE_PORT=8083
FRONTEND_PORT=3000

# JWT Configuration (if using JWT)
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRATION=86400000

# Logging Level
LOG_LEVEL=INFO


